  "main": "bin/cli.js",
  "types": "bin/cli.d.ts",
  "keywords": [
    "Node.js",
    "NodeJS",
    "Node",
    "JavaScript",
    "TypeScript",
    "Refactoring",
    "Refactor",
    "TS-Morph",
